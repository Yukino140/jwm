<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Select the dropdown toggle link
        var dropdownToggle = document.querySelector('[data-bs-toggle="collapse"]');

        // Listen for clicks on the dropdown toggle link
        dropdownToggle.addEventListener('click', function() {
            var arrowIcon = this.querySelector('.arrow-icon');

            // Check if the dropdown is open or closed by looking for the 'collapsed' class
            if (this.classList.contains('collapsed')) {
                // If closed, change the icon to 'bi-chevron-down'
                arrowIcon.classList.remove('bi-chevron-up');
                arrowIcon.classList.add('bi-chevron-down');
            } else {
                // If open, change the icon to 'bi-chevron-up'
                arrowIcon.classList.remove('bi-chevron-down');
                arrowIcon.classList.add('bi-chevron-up');
            }
        });
    });

